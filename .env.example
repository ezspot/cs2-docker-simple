# CS2 Multi-Server Configuration - Production Ready
# Copy this file to .env and customize per your needs
# NEVER commit .env files with actual secrets to git

# =============================================================================
# GLOBAL SETTINGS
# =============================================================================

# Debug level (0=off, 1=normal, 2=verbose)
DEBUG=1

# Steam validation (0=skip, 1=validate on every boot - slower but safer)
STEAMAPPVALIDATE=0

# Update check interval in hours (0=disabled, 4=check every 4 hours)
CS2_UPDATE_INTERVAL=4

# Match hours when updates should NOT run (e.g., "18-23" for 6pm-11pm)
# Leave empty to allow updates at any time
CS2_UPDATE_MATCH_HOURS=

# =============================================================================
# RESOURCE LIMITS (Optional - defaults are safe for most systems)
# =============================================================================

# Memory limits per server (4g recommended for 18-player servers)
GATHER1_MEM_LIMIT=4g
GATHER2_MEM_LIMIT=4g
DEATHMATCH_MEM_LIMIT=4g
RETAKE1_MEM_LIMIT=4g
RETAKE2_MEM_LIMIT=4g
RETAKE3_MEM_LIMIT=4g

# =============================================================================
# GATHER SERVER 1 (Competitive)
# =============================================================================
GATHER1_SERVERNAME=CS2-Gather1
GATHER1_STARTMAP=de_mirage
GATHER1_MAXPLAYERS=10
GATHER1_PW=
GATHER1_BOT_QUOTA=0
GATHER1_TV_ENABLE=1

# =============================================================================
# GATHER SERVER 2 (Competitive)
